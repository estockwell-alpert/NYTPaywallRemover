{
  "name": "NYT Paywall Remover",
  "description": "Remove the paywall to read full NYT articles",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
	"service_worker": "paywall.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "button.html",
	"default_icon": {
      "16": "/images/brokenwall_16.png",
      "32": "/images/brokenwall_32.png",
      "48": "/images/brokenwall_48.png",
      "128": "/images/brokenwall_128.png"
    }
  },
  "icons": {
    "16": "/images/brokenwall_16.png",
    "32": "/images/brokenwall_32.png",
    "48": "/images/brokenwall_48.png",
    "128": "/images/brokenwall_128.png"
  }
}